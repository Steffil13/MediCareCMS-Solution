@model IEnumerable<MediCareCMS.Models.Doctor>
@{
    ViewBag.Title = "Manage Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Manage Doctors</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a class="btn btn-secondary" href="@Url.Action("Index", "Admin")">← Back to Dashboard</a>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addDoctorModal">+ Add Doctor</button>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Emp ID</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Username</th>
                <th>Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.DocEmpId</td>
                    <td>@d.Name</td>
                    <td>@d.Contact</td>
                    <td>@d.Username</td>
                    <td>@d.Password</td>
                    <td>
                        <a href="#" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editDoctorModal-@d.DoctorId">Edit</a>
                        <a href="@Url.Action("DeleteDoctor", "Admin", new { id = d.DoctorId })" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this doctor?');">
                            Delete
                        </a>
                    </td>
                </tr>

                <!-- Edit Doctor Modal -->
                <div class="modal fade" id="editDoctorModal-@d.DoctorId" tabindex="-1" aria-labelledby="editDoctorLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="EditDoctor" method="post">
                                <input type="hidden" name="DoctorId" value="@d.DoctorId" />
                                <div class="modal-header bg-warning text-dark">
                                    <h5 class="modal-title">Edit Doctor</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label class="form-label">Name</label>
                                        <input class="form-control" name="DoctorName" value="@d.DoctorName" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Contact</label>
                                        <input class="form-control" name="Phone" value="@d.Phone" required />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-primary" type="submit">Save Changes</button>
                                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

<!-- Add Doctor Modal -->
<div class="modal fade" id="addDoctorModal" tabindex="-1" aria-labelledby="addDoctorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddDoctor" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add Doctor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact</label>
                        <input class="form-control" name="Contact" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="submit">Add</button>
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
