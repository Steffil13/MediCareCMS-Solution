@model IEnumerable<MediCareCMS.Models.Department>
@{
    ViewBag.Title = "Manage Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Segoe UI', sans-serif;
    }

    .container {
        max-width: 800px;
        background-color: rgba(255, 255, 255, 0.1);
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        margin-top: 50px;
        position: relative;
    }

    h2 {
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 30px;
        text-align: center;
        color: white;
    }

    label {
        color: white;
        font-weight: 600;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 8px;
    }

    .btn-primary {
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .btn-back {
        position: absolute;
        top: 20px;
        right: 20px;
        background-color: #e74c3c;
        color: white;
        padding: 8px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

        .btn-back:hover {
            background-color: #c0392b;
            color: white;
        }

    .table {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        border-radius: 8px;
        overflow: hidden;
    }

    .thead-dark th {
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
    }

    .alert {
        border-radius: 10px;
        font-weight: 600;
    }
</style>

<div class="container">
    <a href="/Admin/index" class="btn-back">← Back to Dashboard</a>

    <h2>Manage Departments</h2>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="AddDepartment" method="post" class="mb-4">
        <div class="form-group">
            <label>Department Name</label>
            <input type="text" name="DepartmentName" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Add Department</button>
    </form>

    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.DepartmentId</td>
                    <td>@dept.DepartmentName</td>
                </tr>
            }
        </tbody>
    </table>
</div>
