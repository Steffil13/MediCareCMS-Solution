@model IEnumerable<MediCareCMS.Models.Lab>
@{
    ViewBag.Title = "Manage Lab Technicians";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        color: white;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
    }

        .top-bar .title {
            font-size: 28px;
            font-weight: bold;
        }

        .top-bar img.logo {
            height: 70px;
            border-radius: 10px;
        }

    .main-content {
        padding-top: 120px;
    }

    .card-container {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        backdrop-filter: blur(4px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        padding: 30px;
        margin: 0 auto;
        max-width: 95%;
        color: white;
    }

    .table {
        color: white;
        background-color: transparent;
    }

        .table thead th {
            border-bottom: 2px solid #ddd;
        }

    .btn-custom {
        border-radius: 10px;
        font-weight: 600;
        padding: 6px 14px;
    }

    .btn-success, .btn-primary, .btn-warning, .btn-danger, .btn-secondary {
        font-weight: 600;
    }
</style>

<!-- Top Bar -->
<div class="top-bar">
    <div class="title">Manage Lab Technicians</div>
    <img src="~/images/logo.png" alt="Logo" class="logo" />
</div>

<!-- Main Content -->
<div class="container main-content">
    <div class="card-container">

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        <div class="d-flex justify-content-between mb-4">
            <a class="btn btn-secondary btn-custom" href="@Url.Action("Index", "Admin")">← Back to Dashboard</a>
            <button class="btn btn-success btn-custom" data-bs-toggle="modal" data-bs-target="#addLabModal">+ Add Lab Technician</button>
        </div>

        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-light text-dark">
                <tr>
                    <th>Emp ID</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var l in Model)
                {
                    <tr>
                        <td>@l.LabEmpId</td>
                        <td>@l.Name</td>
                        <td>@l.Contact</td>
                        <td>@l.Username</td>
                        <td>@l.Password</td>
                        <td>
                            <a href="#" class="btn btn-warning btn-sm btn-custom" data-bs-toggle="modal" data-bs-target="#editLabModal-@l.LabId">Edit</a>
                            <a href="@Url.Action("DeleteLabTechnician", "Admin", new { id = l.LabId })" class="btn btn-danger btn-sm btn-custom"
                               onclick="return confirm('Are you sure you want to delete this lab technician?');">
                                Delete
                            </a>
                        </td>
                    </tr>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="editLabModal-@l.LabId" tabindex="-1" aria-labelledby="editLabLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="EditLabTechnician" method="post">
                                    <input type="hidden" name="LabId" value="@l.LabId" />
                                    <div class="modal-header bg-warning text-dark">
                                        <h5 class="modal-title">Edit Lab Technician</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3">
                                            <label class="form-label">Name</label>
                                            <input class="form-control" name="Name" value="@l.Name" required />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Contact</label>
                                            <input class="form-control" name="Contact" value="@l.Contact" required />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-primary" type="submit">Save Changes</button>
                                        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Lab Technician Modal -->
<div class="modal fade" id="addLabModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddLabTechnician" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add Lab Technician</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contact</label>
                        <input class="form-control" name="Contact" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" type="submit">Add</button>
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
