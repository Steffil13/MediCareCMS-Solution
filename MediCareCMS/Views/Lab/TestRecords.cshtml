@model List<MediCareCMS.Models.TestResult>
@{
    ViewData["Title"] = "Test Records";
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        overflow: hidden;
    }

    .logo-top-right {
        position: absolute;
        top: 20px;
        right: 40px;
        width: 140px;
        height: auto;
    }

    .records-container {
        background: #ffffffdd;
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 90%;
        margin: 120px auto;
        overflow: hidden;
    }

    h2 {
        font-weight: 700;
        font-size: 2rem;
        color: #2f5274;
        text-align: center;
        margin-bottom: 30px;
    }

    .table thead {
        background-color: #3C9EC4;
        color: white;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
        font-size: 15px;
    }
</style>

<img src="~/images/logo.png" class="logo-top-right" alt="Logo" />

<div class="records-container">
    <h2>Completed Test Records</h2>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Test</th>
                    <th>Value</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.PatientName</td>
                        <td>@result.TestName</td>
                        <td>@result.PatientValue</td>
                        <td style="color:@(result.ResultStatus == "Abnormal" ? "red" : "green")">
                            @result.ResultStatus
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
