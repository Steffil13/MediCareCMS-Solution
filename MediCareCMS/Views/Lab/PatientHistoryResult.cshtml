@model List<MediCareCMS.Models.TestResults>
@{
    ViewData["Title"] = "Patient Test History";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🧾 Patient Test History</h2>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Result</th>
                    <th>Remarks</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model)
                {
                    <tr>
                        <td>@result.TestName</td>
                        <td>@result.ResultValue</td>
                        <td>@result.Remarks</td>
                        <td>@result.RecordedDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">No lab history found for this patient.</div>
    }
</div>
