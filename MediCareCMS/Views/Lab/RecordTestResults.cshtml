@model List<MediCareCMS.Models.TestResults>
@{
    ViewData["Title"] = "Test Results Record";
}

<div class="container mt-4">
    <h3>All Recorded Test Results</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Result ID</th>
                <th>Request ID</th>
                <th>Result Value</th>
                <th>Remarks</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.ResultId</td>
                    <td>@r.RequestId</td>
                    <td>@r.ResultValue</td>
                    <td>@r.Remarks</td>
                    <td>@r.RecordedDate.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
