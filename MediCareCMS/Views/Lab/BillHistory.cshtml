@{
}
@model List<MediCareCMS.Models.LabBill>
@{
    ViewData["Title"] = "Lab Bill History";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">💰 Lab Bill History</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Bill ID</th>
                <th>Patient ID</th>
                <th>Test Name</th>
                <th>Amount</th>
                <th>Bill Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in Model)
            {
                <tr>
                    <td>@bill.BillId</td>
                    <td>@bill.PatientId</td>
                    <td>@bill.TestName</td>
                    <td>₹@bill.Amount</td>
                    <td>@bill.BillDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
