@model List<MediCareCMS.ViewModels.Pharmacist.PharmacyBillVM>
@{
    ViewData["Title"] = "Pharmacy Bill History";
}

<!-- Bootstrap & Google Fonts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        overflow: hidden;
    }

    .logo-top-right {
        position: absolute;
        top: 20px;
        right: 40px;
        width: 130px;
        height: auto;
    }

    .bill-container {
        background: #ffffffdd;
        padding: 50px 40px;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 95%;
        margin: 120px auto;
        max-width: 1000px;
    }

    h2 {
        font-weight: 700;
        font-size: 2rem;
        color: #2f5274;
        text-align: center;
        margin-bottom: 30px;
    }

    .table thead {
        background-color: #3C9EC4;
        color: white;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
        font-size: 15px;
    }

    .btn-secondary {
        border-radius: 10px;
        font-weight: 600;
        font-size: 14px;
        padding: 10px 20px;
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .btn-pdf {
        font-size: 13px;
        padding: 6px 12px;
        background-color: #198754;
        border: none;
        color: white;
        border-radius: 8px;
    }

        .btn-pdf:hover {
            background-color: #146c43;
        }
</style>

<img src="~/images/logo.png" class="logo-top-right" alt="Logo" />

<div class="bill-container">
    <h2>💳 Pharmacy Bill History</h2>
    <hr />

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">No bills found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Prescription ID</th>
                        <th>Patient Name</th>
                        <th>Total Amount</th>
                        <th>Date Issued</th>
                        <th>Download</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bill in Model)
                    {
                        <tr>
                            <td>@bill.PrescriptionId</td>
                            <td>@bill.PatientName</td>
                            <td>₹@bill.TotalAmount</td>
                            <td>@bill.IssuedDate.ToString("dd MMM yyyy hh:mm tt")</td>
                            <td>
                                <a class="btn btn-pdf" asp-action="DownloadBillPdf" asp-route-prescriptionId="@bill.PrescriptionId">
                                    📄 PDF
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-action="Dashboard" class="btn btn-secondary">↩️ Back to Dashboard</a>
    </div>
</div>
