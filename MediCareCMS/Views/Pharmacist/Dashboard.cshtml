@{
    ViewData["Title"] = "Pharmacist Dashboard";
    var name = Context.Session.GetString("Username") ?? "Pharmacist";
}

<div class="container mt-4">
    <h2>👨‍⚕️ Welcome, @name</h2>
    <hr />

    <div class="row">
        <div class="col-md-6 mb-3">
            <a href="@Url.Action("ViewPrescriptions", "Pharmacist")" class="btn btn-primary w-100 p-3">
                🧾 View Prescriptions
            </a>
        </div>

        <div class="col-md-6 mb-3">
            <a href="@Url.Action("IssueMedicines", "Pharmacist")" class="btn btn-success w-100 p-3">
                💊 Issue Medicines
            </a>
        </div>

        <div class="col-md-6 mb-3">
            <a href="@Url.Action("PatientHistory", "Pharmacist")" class="btn btn-info w-100 p-3">
                👤 View Patient History
            </a>
        </div>

        <div class="col-md-6 mb-3">
            <a href="@Url.Action("MedicineInventory", "Pharmacist")" class="btn btn-warning w-100 p-3">
                📦 Medicine Inventory
            </a>
        </div>

        <div class="col-md-12 mb-3">
            <a href="@Url.Action("Logout", "Account")" class="btn btn-danger w-100 p-3">
                🔓 Logout
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background: #f0f9ff;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        margin-bottom: 25px;
    }

    .btn {
        font-size: 1.2rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn:hover {
            transform: scale(1.03);
            transition: 0.2s ease-in-out;
        }
</style>