@{
    ViewData["Title"] = "Admin Dashboard";
    var name = Context.Session.GetString("Username") ?? "Admin";
}

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Segoe UI', sans-serif;
        overflow: hidden;
        margin: 0;
        padding: 0;
        color: white;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
    }

        .top-bar .title {
            font-size: 28px;
            font-weight: bold;
        }

        .top-bar img.logo {
            height: 70px;
            width: auto;
            border-radius: 10px;
        }

    .main-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        padding-top: 60px;
        text-align: center;
    }

    .welcome-box {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 25px 40px;
        margin-bottom: 40px;
        backdrop-filter: blur(4px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    }

        .welcome-box h2 {
            font-size: 2.2rem;
            margin: 0;
        }

    .grid {
        display: grid;
        grid-template-columns: repeat(2, 240px);
        gap: 30px;
    }

    .dashboard-card {
        height: 120px;
        background-color: white;
        color: #2c3e50;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 16px;
        font-size: 18px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
        transition: 0.3s ease;
    }

        .dashboard-card:hover {
            background-color: #f0f0f0;
            transform: scale(1.04);
        }

    .logout-card {
        background-color: #e74c3c;
        color: white;
    }

        .logout-card:hover {
            background-color: #c0392b;
        }
</style>

<!-- Top Bar -->
<div class="top-bar">
    <div class="title">Admin Dashboard</div>
    <img src="~/images/logo.png" alt="Logo" class="logo" />
</div>

<!-- Main Content -->
<div class="main-content">
    <div class="welcome-box">
        <h2>Welcome, @name</h2>
    </div>

    <div class="grid">
        <a href="/Admin/ManageReceptionists" class="dashboard-card">👩 Receptionists</a>
        <a href="/Admin/ManageDoctors" class="dashboard-card">👨‍⚕️ Doctors</a>
        <a href="/Admin/ManagePharmacists" class="dashboard-card">💊 Pharmacists</a>
        <a href="/Admin/ManageLabTechnicians" class="dashboard-card">🔬 Lab Technicians</a>
        <a href="/Login/Logout" class="dashboard-card logout-card">🚪 Logout</a>
    </div>
</div>
