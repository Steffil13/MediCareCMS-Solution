@model MediCareCMS.Models.DoctorSchedule

@{
    ViewData["Title"] = "Edit Doctor Schedule";
    var name = Context.Session.GetString("Username") ?? "Doctor";
}

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        color: white;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
    }

        .top-bar .title {
            font-size: 28px;
            font-weight: bold;
        }

        .top-bar img.logo {
            height: 70px;
            width: auto;
            border-radius: 10px;
        }

    .form-container {
        padding-top: 120px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .form-box {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(6px);
        border-radius: 16px;
        padding: 30px 40px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    }

        .form-box h2 {
            text-align: center;
            margin-bottom: 25px;
        }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        border: none;
        color: black;
    }

    .form-check-input {
        margin-top: 6px;
    }

    .btn-primary {
        background-color: #2980b9;
        border: none;
        padding: 8px 20px;
        font-weight: 600;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #2471a3;
        }

    .btn-secondary {
        padding: 8px 20px;
        font-weight: 600;
        border-radius: 8px;
        margin-left: 10px;
    }

    label {
        font-weight: 600;
    }

    .text-danger {
        color: #ffcccc;
    }
</style>

<!-- Top Bar -->
<div class="top-bar">
    <div class="title">Edit Schedule</div>
    <img src="~/images/logo.png" alt="Logo" class="logo" />
</div>

<!-- Form -->
<div class="form-container">
    <div class="form-box">
        <h2>Edit Doctor Schedule</h2>

        <form asp-action="EditSchedule" method="post">
            <input type="hidden" asp-for="ScheduleId" />
            <input type="hidden" asp-for="DoctorId" />

            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                <label asp-for="IsAvailable" class="form-check-label ml-2">Available?</label>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="DoctorSchedule" asp-route-doctorId="@Model.DoctorId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
