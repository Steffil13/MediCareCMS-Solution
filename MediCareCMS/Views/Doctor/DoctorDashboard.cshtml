        padding: 0;
        color: white;
    }

    .header-container {
        background-color: rgba(0, 0, 0, 0.3); /* semi-transparent dark bg */
        padding: 10px 0;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 50px;
    }

        .header .logo {
            height: 80px;
            width: auto;
            border-radius: 10px;
        }

        .header .brand {
            flex: 1 1 auto;
            text-align: center;
            padding: 0 40px;
        }

            .header .brand h1 {
                margin: 0;
                font-size: 28px;
                font-weight: 700;
                letter-spacing: 1px;
            }

            .header .brand p {
                margin: 5px 0 0 0;
                font-size: 16px;
                font-weight: 500;
                line-height: 1.4;
            }

    .logout-btn {
        background-color: #e74c3c;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 16px;
