@model List<MediCareCMS.Models.Appointment>
@{
    ViewData["Title"] = "Doctor Dashboard";
    var name = Context.Session.GetString("Username") ?? "Doctor";
    var doctorId = ViewBag.DoctorId;
    var hasAppointments = Model != null && Model.Any();
}

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Segoe UI', sans-serif;
        color: white;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        position: relative;
    }

        .top-bar .title {
            font-size: 28px;
            font-weight: bold;
        }

        .top-bar img.logo {
            height: 70px;
            border-radius: 10px;
        }

    .main-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        text-align: center;
    }

    .welcome-box {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 25px 40px;
        margin-bottom: 40px;
        backdrop-filter: blur(4px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
        width: 100%;
        max-width: 800px;
    }

    .dashboard-card {
        background-color: white;
        color: #2c3e50;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 16px;
        font-size: 18px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
        padding: 12px 20px;
        border: none;
        transition: 0.3s ease;
    }

        .dashboard-card:hover {
            background-color: #f0f0f0;
            transform: scale(1.04);
        }

    .logout-card {
        background-color: #e74c3c;
        color: white;
    }

        .logout-card:hover {
            background-color: #c0392b;
        }

    .table-container {
        width: 95%;
        margin: auto;
        background-color: rgba(255, 255, 255, 0.1);
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        margin-bottom: 50px;
    }

    .table {
        color: white;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    .badge-pending {
        background-color: #f1c40f;
        color: black;
    }

    .badge-completed {
        background-color: #2ecc71;
        color: white;
    }

    .btn-consult {
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
    }

    .modal-content {
        background-color: #f8f9fa;
    }

    .modal-header {
        background-color: #17a2b8;
        color: white;
    }

    .modal-body .badge {
        font-size: 0.8rem;
    }
</style>

<!-- Top Bar -->
<div class="top-bar">
    <div class="title">Doctor Dashboard</div>
    <img src="~/images/logo.png" alt="Logo" class="logo" />
</div>

<!-- Main Content -->
<div class="main-content">
    <div class="welcome-box">
        <h2>Welcome, Dr. @name</h2>
        <p class="mb-0">What would you like to do today?</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="grid">
        <button class="dashboard-card" data-bs-toggle="modal" data-bs-target="#todaysAppointmentsModal">
            📅 View All Today's Appointments
        </button>
        <a href="/Doctor/DoctorSchedule?doctorId=@doctorId" class="dashboard-card">📆 My Schedule</a>
        <a href="/Login/Logout" class="dashboard-card logout-card">🔓 Logout</a>
    </div>

    <!-- Inline Appointments Section -->
    <div class="table-container">
        <h4 class="mb-3">📅 Today's Appointments</h4>
        @if (hasAppointments)
        {
            <table class="table table-bordered table-hover bg-transparent">
                <thead class="text-white">
                    <tr>
                        <th>Token</th>
                        <th>Patient</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Consult</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Token</td>
                            <td>@appointment.Name</td>
                            <td>@appointment.Time</td>
                            <td>
                                @if (appointment.IsConsulted)
                                {
                                    <span class="badge badge-completed">Completed</span>
                                }
                                else
                                {
                                    <span class="badge badge-pending">Pending</span>
                                }
                            </td>
                            <td>
                                @if (!appointment.IsConsulted)
                                {
                                    <a class="btn btn-success btn-sm btn-consult"
                                       asp-action="Consult"
                                       asp-route-appointmentId="@appointment.AppointmentId">
                                        Consult
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Done</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning text-dark bg-light">
                No appointments scheduled for today.
            </div>
        }
    </div>
</div>

<!-- Modal for Today's Appointments -->
<div class="modal fade" id="todaysAppointmentsModal" tabindex="-1" aria-labelledby="todaysAppointmentsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title">📅 All Today's Appointments</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (hasAppointments)
                {
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Token</th>
                                <th>Patient</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Consult</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td>@appointment.Token</td>
                                    <td>@appointment.Name</td>
                                    <td>@appointment.Time</td>
                                    <td>
                                        @if (appointment.IsConsulted)
                                        {
                                            <span class="badge badge-completed">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-pending">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!appointment.IsConsulted)
                                        {
                                            <a class="btn btn-success btn-sm btn-consult"
                                               asp-action="Consult"
                                               asp-route-appointmentId="@appointment.AppointmentId">
                                                Consult
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Done</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No appointments scheduled for today.</p>
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
