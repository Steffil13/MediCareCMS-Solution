@model List<MediCareCMS.Models.Appointment>
@{
    ViewData["Title"] = "Doctor Dashboard";
    var name = Context.Session.GetString("Username") ?? "Doctor";
    var doctorId = ViewBag.DoctorId;
    var today = DateTime.Today;
    var selectedDate = Model.FirstOrDefault()?.Date.ToString("dddd, dd MMM yyyy") ?? "";
    var tomorrowDate = today.AddDays(1);
    var todayAppointments = Model.Where(a => a.Date.Date == today).ToList();
    var tomorrowAppointments = Model.Where(a => a.Date.Date == tomorrowDate).ToList();
}

<!-- CSS omitted for brevity (keep your original styling) -->

<div class="header-container">
    <div class="header">
        <img src="~/images/logo.png" alt="Logo" class="logo" />
        <div class="brand">
            <h1>Medicare+</h1>
            <p>your health<br />our promise</p>
        </div>
        <a href="/Login/Logout" class="logout-btn">Log Out</a>
    </div>
</div>

<!-- Navigation Bar -->
<div class="nav-bar">
    <a href="#" class="nav-link" data-toggle="modal" data-target="#todayModal">Today's Appointments</a>
    <a href="#" class="nav-link" data-toggle="modal" data-target="#tomorrowModal">Tomorrow's Appointments</a>
    <a href="#" class="nav-link" data-toggle="modal" data-target="#scheduleModal">Set My Schedule</a>
    <a href="#" class="nav-link" data-toggle="modal" data-target="#historyModal">Patient History</a>

</div>

<div class="main-content">
    <div class="welcome-box">
        <h2>Welcome, Dr. @name</h2>
        <p>Manage your appointments and availability below.</p>
    </div>
</div>

<!-- Modal: Today -->
<div class="modal fade" id="todayModal" tabindex="-1" role="dialog" aria-labelledby="todayModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title">Today's Appointments - @selectedDate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (todayAppointments.Any())
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Token</th>
                                <th>Patient</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Consult</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in todayAppointments)
                            {
                                <tr>
                                    <td>@appointment.Token</td>
                                    <td>@appointment.Name</td>
                                    <td>@appointment.Time</td>
                                    <td>
                                        @if (appointment.IsConsulted)
                                        {
                                            <span class="badge badge-success">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!appointment.IsConsulted)
                                        {
                                            <a class="btn btn-success btn-sm"
                                               asp-action="Consult"
                                               asp-route-appointmentId="@appointment.AppointmentId">
                                                Consult
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Done</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning">No appointments scheduled for today.</div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal: Tomorrow -->
<div class="modal fade" id="tomorrowModal" tabindex="-1" role="dialog" aria-labelledby="tomorrowModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title">Tomorrow's Appointments - @tomorrowDate.ToString("dddd, dd MMM yyyy")</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (tomorrowAppointments.Any())
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Token</th>
                                <th>Patient</th>
                                <th>Time</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in tomorrowAppointments)
                            {
                                <tr>
                                    <td>@appointment.Token</td>
                                    <td>@appointment.Name</td>
                                    <td>@appointment.Time</td>
                                    <td>
                                        @if (appointment.IsConsulted)
                                        {
                                            <span class="badge badge-success">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Pending</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-warning">No appointments scheduled for tomorrow.</div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal: Schedule -->
<div class="modal fade" id="scheduleModal" tabindex="-1" role="dialog" aria-labelledby="scheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title">Set My Available Schedule</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="SetSchedule" asp-controller="Doctor">
                    <input type="hidden" name="DoctorId" value="@doctorId" />
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" name="Date" class="form-control"
                               min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="form-group">
                        <label for="from">Available From</label>
                        <input type="time" name="FromTime" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="to">Available To</label>
                        <input type="time" name="ToTime" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Save Schedule</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal for Patient History -->
<div class="modal fade" id="historyModal" tabindex="-1" role="dialog" aria-labelledby="historyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title">Patient History</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (ViewBag.PatientHistory != null && ((List<MediCareCMS.Models.PatientHistory>)ViewBag.PatientHistory).Any())
                {
                    var history = (List<MediCareCMS.Models.PatientHistory>)ViewBag.PatientHistory;
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Patient Name</th>
                                <th>Age</th>
                                <th>Contact</th>
                                <th>Disease</th>
                                <th>Medicines</th>
                                <th>Test</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in history)
                            {
                                <tr>
                                    <td>@item.DateOfConsultation.ToShortDateString()</td>
                                    <td>@item.PatientName</td>
                                    <td>@item.Age</td>
                                    <td>@item.Contact</td>
                                    <td>@item.Disease</td>
                                    <td>@item.Medicines</td>
                                    <td>@item.TestName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">No history records found.</div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <!-- Bootstrap and jQuery assumed to be already included -->
}
