@model List<MediCareCMS.Models.Appointment>
@{
    ViewData["Title"] = "Doctor Dashboard";
    var name = Context.Session.GetString("Username") ?? "Doctor";
    var doctorId = ViewBag.DoctorId;
    var today = DateTime.Today;
    var selectedDate = Model.FirstOrDefault()?.Date.ToString("dddd, dd MMM yyyy") ?? "";
    var hasData = Model != null && Model.Any();
    var searchQuery = Context.Request.Query["search"].ToString()?.ToLower() ?? "";
    var filteredModel = string.IsNullOrEmpty(searchQuery)
        ? Model
        : Model.Where(a => a.Name.ToLower().Contains(searchQuery)).ToList();
}

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Segoe UI', sans-serif;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
        color: white;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        position: relative;
        width: 100%;
    }

        .top-bar .title {
            font-size: 28px;
            font-weight: bold;
        }

        .top-bar img.logo {
            height: 70px;
            width: auto;
            border-radius: 10px;
        }

    .main-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding-top: 20px;
        min-height: 100vh;
        text-align: center;
    }

    .welcome-box {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 25px 40px;
        margin-bottom: 40px;
        backdrop-filter: blur(4px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    }

        .welcome-box h2 {
            font-size: 2.2rem;
            margin: 0;
        }

    .grid {
        display: grid;
        grid-template-columns: repeat(2, 240px);
        grid-template-rows: repeat(2, 120px);
        gap: 30px;
        margin-bottom: 40px;
    }

    .dashboard-card {
        background-color: white;
        color: #2c3e50;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 16px;
        font-size: 18px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
        transition: 0.3s ease;
    }

        .dashboard-card:hover {
            background-color: #f0f0f0;
            transform: scale(1.04);
        }

    .logout-card {
        background-color: #e74c3c;
        color: white;
    }

        .logout-card:hover {
            background-color: #c0392b;
        }

    .search-box input {
        padding: 10px;
        width: 300px;
        border-radius: 10px;
        border: none;
        margin-bottom: 20px;
        color: black;
    }

    table {
        color: white;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    .badge-pending {
        background-color: #f1c40f;
    }

    .badge-completed {
        background-color: #2ecc71;
    }

    .btn-consult {
        padding: 4px 12px;
        border-radius: 6px;
        font-size: 0.85rem;
    }

    .button-bar {
        margin-bottom: 20px;
    }

    .table-responsive {
        width: 90%;
        margin: auto;
    }
</style>

<!-- Top Bar -->
<div class="top-bar">
    <div class="title">Doctor Dashboard</div>
    <img src="~/images/logo.png" alt="Logo" class="logo" />
</div>

<!-- Main Content -->
<div class="main-content">
    <div class="welcome-box">
        <h2>Welcome, Dr. @name</h2>
        <p class="mb-0">
            @(hasData ? $"Appointments for {selectedDate}" : "No Appointments")
        </p>
    </div>

    <!-- Dashboard Cards -->
    <div class="grid">
        <a href="/Doctor/TodayAppointments?doctorId=@doctorId" class="dashboard-card">📅 Today's Appointments</a>
        <a href="/Doctor/TomorrowAppointments?doctorId=@doctorId" class="dashboard-card">🗓️ Tomorrow's Appointments</a>
        <a href="/Doctor/DoctorSchedule?doctorId=@doctorId" class="dashboard-card">📆 My Schedule</a>
        <a href="/Login/Logout" class="dashboard-card logout-card">🔓 Logout</a>
    </div>

    

    <!-- Search -->
    <form method="get" class="search-box">
        <input type="text" name="search" placeholder="🔍 Search Patient Name" value="@searchQuery" />
    </form>

    @if (filteredModel.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover bg-transparent">
                <thead class="text-white">
                    <tr>
                        <th>Token</th>
                        <th>Patient</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Consult</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in filteredModel)
                    {
                        <tr>
                            <td>@appointment.Token</td>
                            <td>@appointment.Name</td>
                            <td>@appointment.Time</td>
                            <td>
                                @if (appointment.IsConsulted)
                                {
                                    <span class="badge badge-completed">Completed</span>
                                }
                                else
                                {
                                    <span class="badge badge-pending">Pending</span>
                                }
                            </td>
                            <td>
                                @if (!appointment.IsConsulted)
                                {
                                    <a class="btn btn-success btn-sm btn-consult" asp-action="Consult" asp-route-appointmentId="@appointment.AppointmentId">Consult</a>
                                }
                                else
                                {
                                    <span class="text-muted">Done</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-dark bg-light mt-3 w-50 mx-auto">
            @(
                    ViewBag.AppointmentDateType == "Today"
                    ? "No appointments scheduled for today."
                    : ViewBag.AppointmentDateType == "Tomorrow"
                    ? "No appointments scheduled for tomorrow."
                    : "No appointments found."
                    )
    </div>
        }
</div>
