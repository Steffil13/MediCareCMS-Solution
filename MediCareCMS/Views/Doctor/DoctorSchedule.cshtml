@model List<MediCareCMS.Models.DoctorSchedule>

@{
    ViewBag.Title = "Doctor Schedule";
    var doctorId = ViewBag.DoctorId;
}

<h2>Doctor Schedule</h2>

<a asp-action="AddSchedule" asp-route-doctorId="@doctorId" class="btn btn-primary mb-3">+ Add Schedule</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Availability</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var schedule in Model)
            {
                <tr>
                    <td>@schedule.Date.ToShortDateString()</td>
                    <td>@(schedule.IsAvailable ? "Available" : "Unavailable")</td>
                    <td>
                        <a asp-action="EditSchedule" asp-route-id="@schedule.ScheduleId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteSchedule" asp-route-id="@schedule.ScheduleId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No schedule found.</td>
            </tr>
        }
    </tbody>
</table>
