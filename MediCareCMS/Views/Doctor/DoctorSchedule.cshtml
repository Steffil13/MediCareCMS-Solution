@{
}
@model List<MediCareCMS.Models.DoctorSchedule>
@{
    ViewBag.Title = "Doctor Weekly Schedule";
    var doctorId = ViewBag.DoctorId;
}

<h2>Doctor Weekly Schedule</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Available</th>
            <th>Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Date.ToString("dddd, dd MMM")</td>
                <td>@(s.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <form asp-action="UpdateDoctorSchedule" method="post">
                        <input type="hidden" name="doctorId" value="@doctorId" />
                        <input type="hidden" name="date" value="@s.Date.ToString("yyyy-MM-dd")" />
                        <select name="isAvailable" class="form-control form-control-sm">
                            <option value="true" selected="@s.IsAvailable">Available</option>
                            <option value="false" selected="@(!s.IsAvailable)">Unavailable</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary mt-1">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
