@model MediCareCMS.Models.DoctorSchedule

@{
    ViewData["Title"] = "Delete Doctor Schedule";
    var name = Context.Session.GetString("Username") ?? "Doctor";
}

<style>
    body {
        background: linear-gradient(to left, rgba(60, 158, 196, 0.6), rgba(42, 58, 89, 0.6));
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
        color: white;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 40px;
        position: absolute;
        width: 100%;
        top: 0;
        left: 0;
    }

        .top-bar .title {
            font-size: 28px;
            font-weight: bold;
        }

        .top-bar img.logo {
            height: 70px;
            width: auto;
            border-radius: 10px;
        }

    .delete-container {
        padding-top: 120px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .delete-box {
        background-color: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(6px);
        border-radius: 16px;
        padding: 30px 40px;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    }

        .delete-box h2 {
            color: #ffdddd;
            text-align: center;
            margin-bottom: 20px;
        }

    .alert-warning {
        background-color: #f8d7da;
        color: #721c24;
        border: none;
        border-radius: 8px;
        padding: 15px;
    }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        padding: 8px 18px;
        font-weight: 600;
        border-radius: 8px;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-secondary {
        padding: 8px 18px;
        font-weight: 600;
        border-radius: 8px;
        margin-left: 10px;
    }

    .schedule-details p {
        margin: 5px 0;
        font-size: 16px;
    }
</style>

<!-- Top Bar -->
<div class="top-bar">
    <div class="title">Delete Schedule</div>
    <img src="~/images/logo.png" alt="Logo" class="logo" />
</div>

<!-- Main Content -->
<div class="delete-container">
    <div class="delete-box">
        <h2 class="text-danger">Delete Doctor Schedule</h2>

        <div class="alert alert-warning text-dark">
            <strong>Are you sure you want to delete this schedule?</strong>
        </div>

        <div class="schedule-details text-white mb-4">
            <p><strong>Date:</strong> @Model.Date.ToString("dddd, dd MMM yyyy")</p>
            <p><strong>Availability:</strong> @(Model.IsAvailable ? "Available" : "Unavailable")</p>
        </div>

        <form asp-action="DeleteSchedule" method="post">
            <input type="hidden" asp-for="ScheduleId" />
            <input type="hidden" asp-for="DoctorId" />

            <div class="text-center">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="DoctorSchedule" asp-route-doctorId="@Model.DoctorId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
