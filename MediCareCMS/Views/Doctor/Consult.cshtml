@section Scripts {
    <script>
        $(document).ready(function () {
            $('#consultModal').modal('show');

            $('#labYes').on('change', function () {
                $('#labTestDropdown').show();
            });
            $('#labNo').on('change', function () {
                $('#labTestDropdown').hide();
            });

            $('#add-medicine').on('click', function () {
                var index = $('.medicine-block').length;
                var template = $('#medicine-template').html().replace(/__index__/g, index);
                $('#medicine-container').append(template);
            });

            $('#savePrescriptionBtn').on('click', function () {
                var form = $('#consultForm');
                $.ajax({
                    url: '/Doctor/Consult',
                    type: 'POST',
                    data: form.serialize(),
                    success: function (response) {
                        alert('Prescription saved successfully');
                        $('#consultModal').modal('hide');
                        location.reload();
                    },
                    error: function () {
                        alert('Something went wrong while saving.');
                    }
                });
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            const yesRadio = document.getElementById("labYes");
            const noRadio = document.getElementById("labNo");
            const checkboxDiv = document.getElementById("labTestCheckboxes");

            function toggleCheckboxes() {
                checkboxDiv.style.display = yesRadio.checked ? "block" : "none";
            }

            yesRadio.addEventListener("change", toggleCheckboxes);
            noRadio.addEventListener("change", toggleCheckboxes);

            toggleCheckboxes(); // Run on page load
        });
    </script>
}
